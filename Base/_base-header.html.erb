<div class="base-header" data-index="<%= index %>" data-type="3" data-child="2"><div class="inner">
	<div class="header"><div class="inner">
	</div></div>
	<div class="content"><div class="inner">

	<!-- accesskey 導盲磚 -->
		<%= render :partial => '/Module/simple-text_accesskey', :locals => { :accesskey => 'U', :title => '上方選單連結區，此區塊列有本網站的主要連結' } %>
	<!-- accesskey 結束 -->

	<!-- group-info 資訊群組 -->
		<div class="group-info" data-index="1" data-type="3" data-child="2"><div class="inner">
			<div class="header"><div class="inner">
			</div></div>
			<div class="content"><div class="inner">

			<!-- logo 主要標誌 -->
				<%= render :partial => '/Module/simple-text_major-logo', :locals => { :index => 1 } %>
			<!-- logo 結束 -->

			<!-- group-msg-tool 資訊與工具群組 -->
				<div class="group-msg-tool" data-index="2" data-type="3" data-child="4"><div class="inner">
					<div class="header"><div class="inner">
					</div></div>
					<div class="content"><div class="inner">

					<!-- font-level 字級調整 -->
						<%= render :partial => '/Module/list-text_font-level', :locals => { :index => 1 } %>
					<!-- font-level 結束 -->

					<!-- link 連結 -->
						<%= render :partial => '/Module/list-text_link', :locals => { :index => 2, :label => nil } %>
					<!-- link 結束 -->

					<!-- search 搜尋 -->
						<%= render :partial => '/Module/area-form_search', :locals => { :index => 3 } %>
					<!-- search 結束 -->

					<!-- hot-key-word 熱門關鍵字 -->
						<%= render :partial => '/Module/list-text_hot-key-word', :locals => { :index => 4 } %>
					<!-- hot-key-word 結束 -->

					</div></div>
				</div></div>
			<!-- group-msg-tool 結束 -->

			</div></div>
		</div></div>
	<!-- group-info 結束 -->

	<!-- group-list_nav 選單列表 -->
		<%= render :partial => '/Module/group-list_nav', :locals => { :index => 2 } %>
	<!-- group-list_nav 結束 -->

	</div></div>
</div></div>