<%
	img = lorem_image('640x480')
%>

<div class="area-customize page-img-figcaption-p <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h4><span><a href="#"><%= header_text %></a></span></h4>
		</div></div>
	<% end %>
	<div class="ct"><div class="in">
		<a href="#" class="div">
			<div class="img"><span style="background-image: url('<%= img %>')"><img src="<%= img %>" alt=""></span></div>
			<div class="essay">
				<div class="figcaption"><span><%= zh_lorem_sentence %></span></div>
				<ul data-index="1" data-child="4">
					<li data-index="2"><span>活動時間：2012/02/30</span></li>
					<li data-index="3"><span>活動地點：<%= zh_lorem_name %></span></li>
				</ul>
				<div class="p">
					<p><span><%= zh_lorem_paragraph %></span></p>
				</div>
			</div>
		</a>
		<div class="page-list-tool">
		 <a class="collect-btn" href="#"><span>收藏</span></a>
		 <div class="countdown"><span>倒數17天</span></div>
		</div>
	</div></div>
</div></div>