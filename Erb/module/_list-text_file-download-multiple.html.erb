<%
	min_li = 1 #最少的li數量
	max_li = 6 #最多的li數量

	li_length = rand( max_li - min_li ) + min_li
%>

<div class="list-text file-download-multiple <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<% if ( li_length > 0 ) %>
			<ul data-index="1" data-child="%= li_length %>">

				<% li_length.times do |i| %>

					<% file_type = $file_types[rand($file_types.length)] %>

					<li class="<%= file_type %>" data-index="<%= i + 1 %>"><span><a href="#" title="<%= file_type %> 格式"><%= file_type %></a></span></li>
				<% end %>
			</ul>
		<% end %>
	</div></div>
</div></div>