<%
	min_li = 4 #最少的li數量
	max_li = 10 #最多的li數量

	li_length = (min_li..max_li).to_a.sample
%>

<div class="list-pic page-block <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h4><span><a href="#"><%= header_text %></a></span></h4>
		</div></div>
	<% end %>
	<div class="ct"><div class="in">
		<ul data-index="1" data-child="<%= li_length %>">

			<% li_length.times do |i| %>
				<% img = $sample_m_pic.sample %>

				<li data-index="<%= i + 1 %>"><span style="background-image: url('<%= img %>')"><a href="#"><% if show_mark %><i class="mark">類別</i><% end %><img src="<%= img %>" alt=""></a></span></li>
			<% end %>
		</ul>
	</div></div>
	
	<% if show_footer %>
		<div class="ft"><div class="in">
			<ul data-index="1" data-child="3">
				<li data-index="1" class="prev"><span><a href="#">上一則</a></span></li>
				<li data-index="2" class="next"><span><a href="#">下一則</a></span></li>
				<li data-index="3" class="more"><span><a href="#">更多</a></span></li>
			</ul>
		</div></div>
	<% end %>
</div></div>