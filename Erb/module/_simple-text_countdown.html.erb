<%
	min_num = 1 #最少的數字
	max_num = 364 #最多的數字

	num = (min_num..max_num).to_a.sample
%>

<div class="simple-text countdown <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<div class="hd"><div class="in">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="ct"><div class="in">
		<span><%= num %></span>
	</div></div>
	
	<% if show_footer %>
		<div class="ft"><div class="in">
			<span><%= zh_lorem_sentence %></span>
		</div></div>
	<% end %>
</div></div>