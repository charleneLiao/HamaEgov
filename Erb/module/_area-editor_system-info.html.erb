<%
	min_paragraph = 1 #最少的段落
	max_paragraph = 6 #最多的段落
	paragraphs_length = 3 #隨機的段落長度 * 3

	paragraph_length = (min_paragraph..max_paragraph).to_a.sample
%>

<div class="area-editor system-info <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h4><span><a href="#"><%= header_text %></a></span></h4>
		</div></div>
	<% end %>
	<div class="ct"><div class="in">
			<p>
				<a href="http://www.cust.edu.tw/www/sample.doc">非指定的外部檔案</a><br />
				<a href="http://ccmsws19.hamastar.com.tw/www/sample.doc">指定的外部檔案</a><br />
				<a href="/sample.doc">絕對路徑檔案</a><br />
				<a href="sample.doc">相對路徑檔案</a>
				<%#= zh_lorem_paragraphs paragraphs_length %>
			</p>

		<%# paragraph_length.times do |i| %>
			<p>
				<%#= zh_lorem_paragraphs paragraphs_length %>
			</p>
		<%# end %>
	</div></div>
</div></div>