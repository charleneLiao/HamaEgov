<%
	max_paragraph_size = 1 #最少的段落長度
	min_paragraph_size = 3 #最多的段落長度
	min_paragraph = 1 #最少的段落
	max_paragraph = 2 #最多的段落

	paragraph_length = rand( max_paragraph - min_paragraph ) + min_paragraph
%>

<div class="area-editor system-info <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">

		<% paragraph_length.times do |i| %>
			<p><%= zh_lorem_paragraphs rand( max_paragraph_size - min_paragraph_size ) + min_paragraph_size %></p>
		<% end %>
	</div></div>
</div></div>