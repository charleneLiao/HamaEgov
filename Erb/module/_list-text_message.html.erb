<%
	min_li = 1 #最少的li數量
	max_li = 10 #最多的li數量
	min_text = 10 #最少的字元
	max_text = 25 #最多的字元

	li_length = (min_li..max_li).to_a.sample
%>

<div class="list-text slider <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<ul data-index="1" data-child="<%= li_length %>">

			<% li_length.times do |i| %>
				<li data-index="<%= i + 1 %>"><span><a href="#"><%= zh_lorem_words (min_text..max_text).to_a.sample %></a></span></li>
			<% end %>
		</ul>
	</div></div>
	
	<% if show_footer %>
		<div class="footer"><div class="inner">
			<ul data-index="1" data-child="3">
				<li data-index="1" class="prev"><span><a href="#">上一則</a></span></li>
				<li data-index="2" class="next"><span><a href="#">下一則</a></span></li>
				<li data-index="3" class="more"><span><a href="#">更多</a></span></li>
			</ul>
		</div></div>
	<% end %>
</div></div>