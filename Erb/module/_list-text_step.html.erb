<%
	min_li = 3 #最少的li數量
	max_li = 4 #最多的li數量
	min_text = 3 #最少的字元
	max_text = 5 #最多的字元

	li_length = (min_li..max_li).to_a.sample
	random = rand( li_length )
%>

<div class="list-text step <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<ul data-index="1" data-child="<%= li_length %>">

			<% li_length.times do |i| %>
			
				<% if( i == random ) %>
					<li data-index="<%= i + 1 %>" class="is-active">
				<% else %>
					<li data-index="<%= i + 1 %>">
				<% end %>
				<span><a href="#">步驟<%= i + 1 %> <%= zh_lorem_words (min_text..max_text).to_a.sample %></a></span></li>
			<% end %>
		</ul>
	</div></div>
</div></div>