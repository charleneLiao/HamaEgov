<%
	min_li = 1 #最少的li數量
	max_li = 10 #最多的li數量
	min_text = 4 #最少的字元
	max_text = 8 #最多的字元

	li_length = (min_li..max_li).to_a.sample
%>

<div class="list-text file-download <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<div class="hd"><div class="in">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="ct"><div class="in">
		<% if ( li_length > 0 ) %>
			<ul data-index="1" data-child="%= li_length %>">

				<% li_length.times do |i| %>

					<% file_type = $file_types[rand($file_types.length)] %>
					<% text = zh_lorem_words (min_text..max_text).to_a.sample %>

					<li class="<%= file_type %>" data-index="<%= i + 1 %>"><span><a href="#" title="<%= text %>.<%= file_type %>"><%= text %></a></span></li>
				<% end %>
			</ul>
		<% end %>
	</div></div>
</div></div>