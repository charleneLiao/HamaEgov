<%
	min_radio = 3 #最少的radio數量
	max_radio = 7 #最多的radio數量

	radio_length = rand( max_radio + 1 - min_radio ) + min_radio
%>

<div class="area-form vote <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<div class="essay">
			<div class="caption"><span><%= zh_lorem_sentence %></span></div>
			<div class="label">
				<ul>
					<li><span><i class="mark">103-12-05</i></span></li>
				</ul>
			</div>
			<div class="paragraph">
				<p><span><%= zh_lorem_paragraph %></span></p>
			</div>
		</div>
		<div class="form">
			<div class="fieldset">

				<% radio_length.times do |i| %>
					<span class="radio"><input id="vote_<%= i %>" type="radio" name="vote"><label for="vote_<%= i %>"><%= zh_lorem_sentence %></label></span>
				<% end %>
			</div>
			<span class="submit"><a href="#">送出</a></span>
		</div>
	</div></div>
</div></div>