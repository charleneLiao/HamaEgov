<%
	min_li = 1 #最少的li數量
	max_li = 6 #最多的li數量
	min_text = 4 #最少的字元
	max_text = 8 #最多的字元

	li_length = (min_li..max_li).to_a.sample
	random = rand( li_length )
%>

<div class="list-text minor-nav <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<div class="hd"><div class="in">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="ct"><div class="in">
		<ul data-index="1" data-child="<%= li_length %>">

			<% li_length.times do |i| %>
			
				<% if( i == random ) %>
					<li data-index="<%= i + 1 %>" class="is-active">
				<% else %>
					<li data-index="<%= i + 1 %>">
				<% end %>
				<span><a href="#"><%= zh_lorem_words (min_text..max_text).to_a.sample %></a></span></li>
			<% end %>
		</ul>
	</div></div>
</div></div>