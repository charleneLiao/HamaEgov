<%
	min_li = 2 #最少的li數量
	max_li = 5 #最多的li數量
	min_text = 3 #最少的字元
	max_text = 8 #最多的字元

	li_length = (min_li..max_li).to_a.sample
%>

<div class="list-text default <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<div class="hd"><div class="in">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="ct"><div class="in">
		<ul data-index="1" data-child="<%= li_length %>">
			
			<% li_length.times do |i| %>
				<li data-index="<%= i + 1 %>"><span><a href="#"><% if show_mark %><i class="mark">2015-11-26</i><% end %><%= zh_lorem_words (min_text..max_text).to_a.sample %></a></span></li>
			<% end %>
		</ul>
	</div></div>
	
	<% if show_footer %>
		<div class="ft"><div class="in">
			<ul data-index="1" data-child="1">
				<li data-index="1" class="more"><span><a href="#">更多</a></span></li>
			</ul>
		</div></div>
	<% end %>
</div></div>