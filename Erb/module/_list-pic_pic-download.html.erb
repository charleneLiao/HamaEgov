<%
	min_li = 4 #最少的li數量
	max_li = 10 #最多的li數量

	li_length = (min_li..max_li).to_a.sample

	types = ['img', 'vedio']
%>

<div class="list-pic pic-download <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h4><span><a href="#"><%= header_text %></a></span></h4>
		</div></div>
	<% end %>
	<div class="ct"><div class="in">
		<ul data-index="1" data-child="<%= li_length %>">

			<% li_length.times do |i| %>
				<%
					img = $sample_m_pic.sample
					type = types.sample
				%>

				<li <% if type %>class="is-<%= type %>"<% end %> data-index="<%= i + 1 %>"><span style="background-image: url('<%= img %>')"><a href="#"><img src="<%= img %>" alt=""></a></span></li>
			<% end %>
		</ul>
	</div></div>
</div></div>