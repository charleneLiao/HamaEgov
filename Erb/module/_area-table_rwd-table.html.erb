<%
	min_cell = 2 #最少的欄數量
	max_cell = 6 #最多的欄數量
	min_row = 3 #最少的行數量
	max_row = 12 #最多的行數量
	min_text = 3 #最少的字元
	max_text = 8 #最多的字元

	cell_length = (min_cell..max_cell).to_a.sample
	row_length = (min_row..max_row).to_a.sample
%>

<div class="area-table rwd-table <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<table>
			<thead data-index="1" data-child="1">
				<tr data-index="1" data-child="<%= cell_length %>">

					<% cell_length.times do |i| %>

						<th><span><%= zh_lorem_words (min_text..max_text).to_a.sample %></span></th>
					<% end %>
				</tr>
			</thead>
			<tbody data-index="2" data-child="<%= row_length %>">

				<% row_length.times do |i| %>
					<tr data-index="<%= i + 1 %>" data-child="<%= cell_length %>">
						<th><span><%= zh_lorem_words (min_text..max_text).to_a.sample %></span></th>

						<% (cell_length - 1).times do |i| %>
							<td><div class="caption"><span><%= zh_lorem_words (min_text..max_text).to_a.sample %></span></div><span><%= zh_lorem_sentence %></span></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
			<tfoot data-index="3" data-child="1">
				<tr data-index="1" data-child="1">
					<td data-index="1" colspan="<%= cell_length %>"><span><%= zh_lorem_sentence %></span></td>
				</tr>
			</tfoot>
		</table>
	</div></div>
	
	<% if show_footer %>
		<div class="footer"><div class="inner">
			<ul data-index="1" data-child="1">
				<li data-index="1" class="more"><span><a href="#">更多</a></span></li>
			</ul>
		</div></div>
	<% end %>
</div></div>