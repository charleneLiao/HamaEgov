<%
	img = $sample_m_pic.sample
%>

<div class="area-figure page-img-label <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<% if header_text %>
		<div class="hd"><div class="in">
			<h4><span><a href="#"><%= header_text %></a></span></h4>
		</div></div>
	<% end %>
	<div class="ct"><div class="in">
		<a href="#" class="div">
			<div class="img"><span style="background-image: url('<%= img %>')"><img src="<%= img %>" alt=""></span></div>
			<div class="label">
				<ul>
					<li><span><i class="mark">2015/11/26</i></span></li>
				</ul>
			</div>
		</a>
	</div></div>
	
	<% if show_footer %>
		<div class="ft"><div class="in">
			<ul data-index="1" data-child="1">
				<li data-index="1" class="more"><span><a href="#">更多</a></span></li>
			</ul>
		</div></div>
	<% end %>
</div></div>