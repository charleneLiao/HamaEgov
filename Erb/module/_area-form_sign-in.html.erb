<%
	img = '/Images/sample/sample_verification_code.jpg'
%>

<div class="area-form sign-in <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $module %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a><% if header_text %><%= header_text %><% end %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<div class="form">
			<div class="fieldset">
				<span class="email is-error" data-before="帳號： "><input type="email" placeholder="請輸入帳號"></span>
				<span class="password" data-before="密碼： "><input type="password" placeholder=""></span>
			</div>
			<div class="fieldset">
				<span class="text" data-before="驗證碼： "><input type="text" placeholder="驗證碼"></span>
				<div class="divition">
					<div class="image"><span style="background-image: url('<%= img %>')"><img src="<%= img %>" alt=""></span></div>
					<span class="button"><input type="button" value="重新產生"></span>
					<span class="button"><input type="button" value="語音撥放"></span>
				</div>
			</div>
			<div class="fieldset">
				<span class="submit"><input type="submit" value="登入"></span>
			</div>
		</div>
		<div class="list">
			<ul data-index="1" data-child="4">
				<li data-index="1" class="facebook"><span><a href="#">Login with Facebook</a></span></li>
				<li data-index="2" class="google"><span><a href="#">Login with Google</a></span></li>
				<li data-index="3" class="twitter"><span><a href="#">Login with Twitter</a></span></li>
			</ul>
		</div>
	</div></div>
	
	<% if show_footer %>
		<div class="footer"><div class="inner">
			<ul data-index="1" data-child="1">
				<li data-index="1" class="forget-password"><span><a href="#">忘記密碼</a></span></li>
			</ul>
		</div></div>
	<% end %>
</div></div>