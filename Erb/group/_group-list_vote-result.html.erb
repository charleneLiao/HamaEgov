<%
	min_li = 2 #最少的li數量
	max_li = 10 #最多的li數量
	min_text = 3 #最少的字元
	max_text = 5 #最多的字元

	li_length = (min_li..max_li).to_a.sample
	random = rand( li_length )
%>

<% if ( li_length > 0 ) %>
	<div class="group-list vote-result <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $list %>" data-child="<%= li_length %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
		<div class="hd"><div class="in">
			<h3><span><a><% if header_text %><%= header_text %><% end %></a></span></h3>
		</div></div>
		<div class="ct"><div class="in">
			<ul data-index="1" data-child="<%= li_length %>">

				<% li_length.times do |i|

					text = "#{i + 1}. #{zh_lorem_words (min_text..max_text).to_a.sample}"
				%>
			
					<% if( i == random ) %>
						<li data-index="<%= i + 1 %>" class="is-special">
					<% else %>
						<li data-index="<%= i + 1 %>">
					<% end %>

					<!-- <%= inner %> -->
						<%= render partial: inner, locals: set({ index: 1, header_text: text, show_mark: false, inner: "/Erb/module/simple-text_vote-result", inner_len: 2 }) %>
					<!-- <%= inner %> -->
					
					</li>
				<% end %>
			</ul>
		</div></div>

		<% if show_footer %>
			<div class="ft"><div class="in">
				<ul data-index="1" data-child="3">
					<li data-index="1" class="more"><span><a href="#">更多</a></span></li>
				</ul>
			</div></div>
		<% end %>
	</div></div>
<% end %>