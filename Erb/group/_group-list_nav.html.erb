<%
	min_li = 1 #最少的li數量
	max_li = 10 #最多的li數量
	min_width = 1 #最窄的選單寬度
	max_width = 6 #最寬的選單寬度
%>

<%
	li_length = rand( max_li + 1 - min_li ) + min_li
	nav_width = rand( max_width + 1 - min_width ) + min_width
%>

<div class="group-list nav" data-index="<%= index %>" data-type="4" data-child="<%= li_length %>"><div class="inner">
	<div class="header"><div class="inner">
		<h3><span><a href="#">選單</a></span></h3>
	</div></div>

	<% if ( li_length > 0 ) %>
		<div class="content"><div class="inner">
			<ul data-index="1" data-child="<%= li_length %>">

				<% li_length.times do |i| %>
					<li data-index="<%= i + 1 %>" data-width="<%= rand( li_length ) + 1 %>">

					<!-- nav 選單 -->
						<%= render :partial => "/Erb/module/list-text_nav" ,:locals => { :index => 1 } %>
					<!-- nav 結束 -->
					</li>
				<% end %>
			</ul>
		</div></div>
	<% end %>
</div></div>