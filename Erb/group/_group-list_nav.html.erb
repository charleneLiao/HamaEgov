<%
	min_li = 1 #最少的li數量
	max_li = 10 #最多的li數量
	min_width = 1 #最窄的選單寬度
	max_width = 6 #最寬的選單寬度

	li_length = (min_li..max_li).to_a.sample
	nav_width = (min_width..max_width).to_a.sample
	
	width = rand( li_length )
%>

<div class="group-list nav <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $list %>" data-child="<%= li_length %>" <% if func_set %> data-func="<%= func_set %>"<% end %> ><div class="in">
	<div class="hd"><div class="in">
		<h3><span><a><% if header_text %><%= header_text %><% end %></a></span></h3>
	</div></div>

	<% if ( li_length > 0 ) %>
		<div class="ct"><div class="in">
			<ul data-index="1" data-child="<%= li_length %>">

				<% li_length.times do |i| %>
					<li data-index="<%= i + 1 %>" data-width="<%= rand( li_length ) + 1 %>">

					<!-- <%= inner %> -->
						<%= render partial: inner ,locals: set({ index: 1, header_text: (zh_lorem_words rand(7)+1), show_footer: false, show_mark: false }) %>
					<!-- <%= inner %> -->
					
					</li>
				<% end %>
			</ul>
		</div></div>
	<% end %>
</div></div>