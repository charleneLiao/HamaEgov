<%
	min_li = 1 #最少的li數量
	max_li = 8 #最多的li數量

	li_length = (min_li..max_li).to_a.sample
%>

<% if ( li_length > 0 ) %>
	<div class="group-list major-slider <% if class_set %><%= class_set %><% end %>" data-index="<%= index %>" data-type="<%= $list %>" data-child="<%= li_length %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
		<div class="header"><div class="inner">
			<h3><span><a><% if header_text %><%= header_text %><% end %></a></span></h3>
		</div></div>
		<div class="content"><div class="inner">
			<ul data-index="1" data-child="<%= li_length %>">

				<% li_length.times do |i| %>
					<li data-index="<%= i + 1 %>">

					<!-- <%= inner %> -->
						<%= render :partial => inner, :locals => { :index => 1, :class_set => nil, :func_set => nil, :header_text => "標題", :show_footer => true, :show_mark => true, :inner => "/Erb/module/simple-pic_default", :inner_len => 2 } %>
					<!-- <%= inner %> -->
					
					</li>
				<% end %>
			</ul>
		</div></div>

		<% if show_footer %>
			<div class="footer"><div class="inner">
				<ul data-index="1" data-child="3">
					<li data-index="1" class="prev"><span><a href="#">上一則</a></span></li>
					<li data-index="2" class="next"><span><a href="#">下一則</a></span></li>
					<li data-index="3" class="more"><span><a href="#">更多</a></span></li>
				</ul>
			</div></div>
		<% end %>
	</div></div>
<% end %>