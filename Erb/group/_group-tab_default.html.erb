<%
	min_li = 1 #最少的li數量
	max_li = 4 #最多的li數量

	li_length = rand( max_li - min_li ) + min_li
%>

<div class="group-tab default" data-index="<%= index %>" data-type="<%= $tab %>" data-child="<%= li_length + 1 %>" <% if func_set %> data-function="<%= func_set %>"<% end %> ><div class="inner">
		<div class="header"><div class="inner">
			<h3><span><a><% if header_text %><%= header_text %><% end %></a></span></h3>
		</div></div>

	<% if ( li_length > 0 ) %>
		<div class="content"><div class="inner">
			<ul data-index="1" data-child="<%= li_length + 1 %>">
				<li data-index="1">

				<!-- tab 頁籤 -->
					<%= render :partial => '/Erb/module/list-text_tab', :locals => { :index => 1, :func_set => nil, :header_text => '頁籤', :inner_len => li_length } %>
				<!-- tab 結束 -->
				
				</li>

				<% li_length.times do |i| %>
					<li data-index="<%= i + 2 %>">

					<!-- message 訊息 -->
						<%= render :partial => "/Erb/group/group-list_message", :locals => { :index => 8, :func_set => nil, :header_text => '輪播', :show_footer => true } %>
					<!-- message 結束 -->

					</li>
				<% end %>
			</ul>
		</div></div>
	<% end %>
</div></div>