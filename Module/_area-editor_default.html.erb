<%
	max_paragraph_size = 1 #最少的段落長度
	min_paragraph_size = 2 #最多的段落長度
	min_paragraph = 1 #最少的段落
	max_paragraph = 3 #最多的段落
%>

<% paragraph_length = rand( min_paragraph_size - min_paragraph ) + min_paragraph %>

<div class="area-editor default" data-index="<%= index %>" data-type="0"><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a>編輯</a></span></h4>
	</div></div>
	<div class="content"><div class="inner">

		<% paragraph_length.times do |i| %>
			<p><%= zh_lorem_paragraphs rand( paragraph_length ) + min_paragraph_size %></p>
		<% end %>
	</div></div>
</div></div>