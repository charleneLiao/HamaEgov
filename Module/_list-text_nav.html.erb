<%
	min_li = 0 #最少的li數量
	max_li = 20 #最多的li數量
	min_text = 4 #最少的字元
	max_text = 8 #最多的字元
%>

<% 
	li_length = rand( max_li + 1 - min_li ) + min_li
%>

<div class="list-text nav" data-index="<%= index %>" data-type="0"><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a href="#"><%= zh_lorem_words rand( max_text - min_text ) + min_text %></a></span></h4>
	</div></div>
	<div class="content"><div class="inner">

		<% if ( li_length > 0 ) %>

			<ul data-index="1" data-child="<%= li_length %>">

				<% li_length.times do |i| %>
					<li data-index="<%= i + 1 %>"><span><a href="#"><%= zh_lorem_words rand( max_text - min_text ) + min_text %></a></span></li>
				<% end %>

			</ul>
		<% end %>
	</div></div>
</div></div>