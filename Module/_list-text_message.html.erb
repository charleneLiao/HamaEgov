<%
	min_li = 1 #最少的li數量
	max_li = 10 #最多的li數量
	min_text = 10 #最少的字元
	max_text = 25 #最多的字元
%>

<% li_length = rand( max_li + 1 - min_li ) + min_li %>

<div class="list-text slider" data-index="<%= index %>" data-type="0"><div class="inner">
	<div class="header"><div class="inner">
		<h4><span><a>訊息</a></span></h4>
	</div></div>
	<div class="content"><div class="inner">
		<ul data-index="1" data-child="<%= li_length %>">

			<% li_length.times do |i| %>
				<li data-index="<%= i + 1 %>"><span><a href="#"><%= zh_lorem_words rand( max_text - min_text ) + min_text %></a></span></li>
			<% end %>

		</ul>
	</div></div>
	<div class="footer"><div class="inner">
		<ul data-index="1" data-child="3">
			<li class="prev" data-index="1"><span><a href="#">上一則</a></span></li>
			<li class="next" data-index="2"><span><a href="#">下一則</a></span></li>
			<li class="more" data-index="3"><span><a href="#">更多</a></span></li>
		</ul>
	</div></div>
</div></div>